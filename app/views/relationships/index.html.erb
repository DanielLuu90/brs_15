<div class="row">
  <div class="bg-img">
    <div class="col-md-2" align="center">
      <br>
      <%= gravatar_for @user, size: Settings.user.gravantar_size150 %><br><br>
      <%= render "users/follow_form", user: @user %>
      <br><br>
      <table class="table">
        <%= render "users/summary", user: @user %>
      </table>
    </div>
    <div class="col-md-10">
      <br><br><br><br><br>
      <%= render "users/header", user: @user %>
      <h3><%= @title %></h3>
      <div class="col-md-12">
        <% if @users.any? %>
          <%= render @users, partial: "users/user" %>
        <% end %>
      </div>
      <%= will_paginate @users %>
    </div>
  </div>
</div>
