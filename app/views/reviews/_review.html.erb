<div id="review-<%= review.id %>" class="row">
  <div class="col-sx-8">
    <%= link_to gravatar_for(review.user, size: Settings.review.picutre_size50, class: "img-rounded img-thumbnail"), review.user %>
  </div>
  <div class="col-sx-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <div class="panel-body">
            <%= link_to review.user.name, review.user %>
            <br>
            <strong><%= review.subject %></strong>
            <br>
            <%= review.content %>
            <%= render "star", rating: review.rating %>
          </div>
        </h3>
      </div>
      <div class="panel-footer">
        <div class="mg-left">
          <div class="comments" id="comment-review-<%= review.id %>">
            <%= render review.comments %>
          </div>
          <% review.comments.build %>
          <%= render "comments/comment_form", review: review %>
        </div>
      </div>
    </div>
  </div>
</div>
