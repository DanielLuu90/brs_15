<h1><%= t "requests.request_title" %></h1>
<%= form_tag batch_update_admin_requests_path do %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t "requests.book_name" %></th>
        <th><%= t "requests.author" %></th>
        <th><%= t "requests.description" %></th>
        <th><%= t "requests.status" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <%= render @requests %>
      </tbody>
  </table>
  <div>
    <%= submit_tag t "feature.update" %>
  </div>
<% end %>
<% will_paginate %>
